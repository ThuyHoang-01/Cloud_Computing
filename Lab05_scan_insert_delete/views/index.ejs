            </thead>
            <tbody>

                <% for (let i = 0; i < sanPhams.length; i++) { %>
                       
                       <td >
                            <%= sanPhams[i].ma_sp %>
                        </td>
                        <td >
                            <%= sanPhams[i].ten_sp %>
                        </td>
                        <td>
                            <%= sanPhams[i].so_luong %>
                        </td>
                        <td>
                            <a href="/delete/<%=sanPhams[i].ma_sp%>">Xóa</a>
                        </td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
