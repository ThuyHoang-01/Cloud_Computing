                <th>Địa chỉ</th>
                <th>Chọn</th>
                <th>Hình ảnh </th>
            </tr>
            <% for (let i = 0; i < nhanViens.length; i++) { %>
                <tr>
                    <td> <%=nhanViens[i].id%></td>
                    <td> <%=nhanViens[i].name%></td>
                    <td> <%=nhanViens[i].address%></td>
                    <td> <input type="checkbox" name="<%=nhanViens[i].id%>"></td>
                    <td> <Link>  <img src="https://stc.hoatuoihoangnga.com/data/uploads/news/be/su-that-thu-vi-ve-co-3-la-co-4-la-va-y-nghia-cua-chung-1598359622975.jpg?v=1598359622" width="100" height="100" alt="Hình ảnh"></Link></td>
                </tr>
           <% } %>
        </table>
        <input type="submit" value="Xoa" class="button button2" /> 
    </form>    
    <form action="/add" method="GET" enctype="multipart/form-data">
        <input type="submit" value="Thêm" class="button button1">
    </form>
    </div>
   
